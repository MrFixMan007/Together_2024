<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.MaterialComponents.MyButton" parent="Widget.MaterialComponents.Button">
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="backgroundTint">@color/primary_color_accent</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Widget.MaterialComponents.MyCenterButton" parent="Widget.MaterialComponents.MyButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/button_front_margin</item>
        <item name="android:layout_marginStart">@dimen/button_front_margin</item>
    </style>

    <style name="Widget.MaterialComponents.MyCenterButton.Blue">
        <item name="cornerRadius">0dp</item>
        <item name="backgroundTint">@color/special_elements_color</item>
        <item name="android:textSize">@dimen/textSize14</item>
        <item name="android:textColor">@color/primary_color</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>
</resources>